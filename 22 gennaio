#include<iostream>
#include<cmath>
using namespace std;

Rettangolo::Rettangolo (){};
Rettangolo::Rettangolo (double x){
	base=x;
	altezza=x;
}
Rettangolo::Rettangolo (double x)
		Rettangolo (float a, float b){
			base=a;
			altezza=b;
		}
		
		int getbase ()
        {
            return base;
        }

        int getaltezza()
        {
            return altezza;
        }
        
		void setbase(int n)
        {
            base=n;
        }
        void setaltezza(int n)
        {
            altezza=n;
        }
		
		double Perimentro (void)
		{
			return altezza*2 + base*2;
		}
		
		double Area (void)
		{
			return base*altezza;
		}
		
		void Rettangolo: :diagonale (void)
		{
			return sqrt (base*base)+(altezza*altezza);
		}
